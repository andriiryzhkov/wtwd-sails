<div class="container">
  <h1>Користувачі</h1>
  <button type="button" class="btn btn-primary btm-add" data-toggle="modal" data-target="#myModal" data-item="-1">Додати користувача</button>
  <table class="table">
    <thead>
      <tr>
        <th>П.І.Б.</th>
        <th>Email</th>
        <th>Адреса</th>
        <th>Телефон</th>
        <th>Договір</th>
        <th> </th>
      </tr>
    </thead>
    <tbody id="dataTable">
    </tbody>
  </table>
</div>
<!-- Модальне (виринаюче) вікно -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="myModalLabel"></h4>
      </div>
      <form id="dataForm" action="#">
        <div class="modal-body">
          <div class="row">
            <div class="col-md-4 form-group">
              <label for="inputLastName">Прізвище</label>
              <input type="text" class="form-control" id="inputLastName">
            </div>
            <div class="col-md-4 form-group">
              <label for="inputFirstName">Ім'я</label>
              <input type="text" class="form-control" id="inputFirstName">
            </div>
            <div class="col-md-4 form-group">
              <label for="inputMiddleName">По батькові</label>
              <input type="text" class="form-control" id="inputMiddleName">
            </div>
          </div>
          <div class="row">
            <div class="col-md-4 form-group">
              <label for="inputEmail">Email</label>
              <input type="email" class="form-control" id="inputEmail">
            </div>
            <div class="col-md-4 form-group">
              <label for="inputPassword">Пароль</label>
              <input type="password" class="form-control" id="inputPassword">
            </div>
            <div class="col-md-4 form-group">
              <label for="inputManager">Менеджер</label><br />
              <input type="checkbox" id="inputManager">
            </div>
          </div>
          <div class="row">
            <div class="col-md-4 form-group">
              <label for="inputAddress">Адреса</label>
              <input type="text" class="form-control" id="inputAddress">
            </div>
            <div class="col-md-4 form-group">
              <label for="inputCity">Місто</label>
              <input type="text" class="form-control" id="inputCity">
            </div>
            <div class="col-md-4 form-group">
              <label for="inputPostcode">Індекс</label>
              <input type="number" class="form-control" id="inputPostcode">
            </div>
          </div>
          <div class="row">
            <div class="col-md-8 form-group">
              <label for="inputPhone">Телефон</label>
              <input type="text" class="form-control" id="inputPhone">
            </div>
            <div class="col-md-4 form-group">
              <label for="inputContract">Договір</label>
              <input type="text" class="form-control" id="inputContract">
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Закрити</button>
          <button type="submit" class="btn btn-primary" data-dismiss="modal" onclick="saveUser()">Зберегти</button>
        </div>
      </form>
    </div>
  </div>
</div>
<% block('localScripts', '<script src="/js/custom/manager/user.js"></script>') %>
